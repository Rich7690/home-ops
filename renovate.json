{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":enableRenovate",
    "config:best-practices",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":automergePr",
    ":automergeMinor",
    ":combinePatchMinorReleases",
    ":skipStatusChecks",
    "schedule:automergeWeekends"
  ],
  "docker": {
    "pinDigests": true
  },
  "kubernetes": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "helm-values": {
    "fileMatch": [
      "\\.yaml$"
    ]
  },
  "argocd": {
    "fileMatch": [
      "apps/templates/.+\\.yaml$"
    ]
  },
  "packageRules": [
    {
      "packagePatterns": [
        "^ghcr.io\\/linuxserver\\/"
      ],
      "versionScheme": "regex:^(?<compatibility>.*?)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    },
    {
      "packagePatterns": [
        "^lscr.io\\/linuxserver\\/"
      ],
      "versionScheme": "regex:^(?<compatibility>.*?)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$"
    }
  ]
}
