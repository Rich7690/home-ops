{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    ":enableRenovate",
    "config:best-practices",
    ":disableRateLimiting",
    ":dependencyDashboard",
    ":automergePr",
    ":automergeMinor",
    ":combinePatchMinorReleases",
    ":skipStatusChecks",
    "schedule:automergeWeekends"
  ],
  "gitAuthor": "Renovate Bot <renovate-bot@no-reply.com>",
  "kubernetes": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "helm-values": {
    "managerFilePatterns": [
      "/\\.yaml$/"
    ]
  },
  "argocd": {
    "managerFilePatterns": [
      "/apps/templates/.+\\.yaml$/"
    ]
  },
  "packageRules": [
    {
      "matchPackageNames": [
        "viaductoss/ksops"
      ],
      "enabled": false
    },
    {
      "matchCategories": [
        "docker"
      ],
      "pinDigests": true
    },
    {
      "pinDigests": false,
      "matchPackageNames": [
        "/^registry.k8s.io\\/ingress-nginx\\/controller/",
        "/^quay.io\\/prometheus\\/node-exporter/"
      ]
    },
    {
      "versioning": "regex:^(?<compatibility>.*?)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$",
      "matchPackageNames": [
        "/^ghcr.io\\/linuxserver\\//"
      ]
    },
    {
      "versioning": "regex:^(?<compatibility>.*?)-(?<major>\\d+)\\.(?<minor>\\d+)\\.(?<patch>\\d+)$",
      "matchPackageNames": [
        "/^lscr.io\\/linuxserver\\//"
      ]
    }
  ]
}
